{
  "name": "docs-to-agent",
  "version": "0.1.0",
  "description": "Download docs from any GitHub repo and generate a compact index for AI coding agents",
  "homepage": "https://github.com/angelorc/docs-to-agent",
  "bugs": "https://github.com/angelorc/docs-to-agent/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/angelorc/docs-to-agent.git"
  },
  "bin": {
    "docs-to-agent": "./dist/bin/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "obuild",
    "dev": "obuild --stub",
    "lint": "oxlint . && oxfmt --check .",
    "lint:fix": "automd && oxlint . --fix && oxfmt .",
    "fmt": "oxfmt .",
    "fmt:check": "oxfmt --check .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepack": "pnpm run build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset version && changeset publish && git push --follow-tags"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/node": "^25.2.3",
    "automd": "^0.4.3",
    "obuild": "^0.4.27",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.6.2"
}
